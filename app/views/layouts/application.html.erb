<!DOCTYPE html>
<html>
  <head>
    <title>Noompang</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= favicon_link_tag 'noompang-favicon-60.png' %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <% if user_signed_in? %>
    <body class="home">
      <%= render 'layouts/nav' %>
      <div class="container">
        <%= yield %>
      </div>
    </body>
  <% else %>
    <% if controller.action_name == 'index' %>
      <body>
        <%= yield %>
      </body>
      <% elsif controller.action_name == 'how-it-works' %>
      <body>
        <%= yield %>
      </body>
      <% elsif controller.action_name == 'about-us' %>
      <body>
        <%= yield %>
      </body>
      <% elsif controller.action_name == 'stories' %>
      <body>
        <%= yield %>
      </body>
      <% elsif controller.action_name == 'FAQ' %>
      <body>
        <%= yield %>
      </body>
      <% elsif controller.action_name == 'explore' %>
      <body>
        <%= yield %>
      </body>
    <% else %>
      <body class="bg-devise">
        <div class="container" id="container-devise">
        <%= render 'layouts/nav' %>
          <%= yield %>
        </div>s
      </body>
    <% end %>
  <% end %>
  <%= render 'layouts/footer' %>
</html>
