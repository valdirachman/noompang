<% provide(:title, "Edit Profile") %>
    <div class="row">

        <div class="col-sm-3" style="padding:0; border-radius:0;">
          <a href="#">
          <div class="panel-body profile-hvr" style="border-radius:0;">
             <p><span class="glyphicon glyphicon-tasks" aria-hidden="true" style="padding-right:10px; margin-top:5px; "></span> Update your profile</p>
          </div>
            </a>
        </div>
        <div class="col-sm-6">
        <div class="panel panel-body">

      <%= form_for @profile, html: { multipart: true } do |f| %>
      <div class="field form-group">
        <p><%= f.label :profile_picture %></p><br>
        <div style="text-align:center">
        <%= image_tag @profile.avatar.url(:medium), style: "max-height: 120px; border-radius:50%;" %>
      </div>
        <div style="padding-top:20px;">
        <%= f.file_field :avatar %>
      </div>
      </div>

      <div class="field form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :occupation %>
        <%= f.text_field :occupation, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :occupation_place %>
        <%= f.text_field :occupation_place, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :about_me %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>

      <%= f.submit "Save changes", class: "btn btn-primary pull-right" %>
      <% end %>
      </div>
    </div>
    <div class="col-sm-3 col-xs-12">
      <%= render '/components/recommended_friends', recommended_friends: @recommended_friends %>
      <%= render '/components/about_panel' %>
    </div>
    </div>

  </div>
</div>
