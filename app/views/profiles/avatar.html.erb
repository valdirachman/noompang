<% provide(:title, "Edit Profile") %>


        <div class="col-sm-3" style="padding:0; border-radius:3px;">

          <div class="list-group">
            <%= link_to 'Personal Information', edit_profile_path(current_user.profile), class: "list-group-item"  %>
            <%= link_to 'Avatar', avatar_profile_path(current_user.profile), class: "list-group-item active"  %>
            <a href="#" class="list-group-item">Morbi leo risus</a>
            <a href="#" class="list-group-item">Porta ac consectetur ac</a>
            <a href="#" class="list-group-item">Vestibulum at eros</a>
          </div>

        </div>

        <div class="col-sm-6 profile-edit-column">
          <div class="panel panel-default">
              <div class="row">
                <div class="col-sm-12 panel-title">
                  <h4> Profile Picture </h4>
                </div>
              </div>
            <div class="panel-body">
            <%= form_for @profile, html: { multipart: true } do |f| %>
            <div class="field form-group">
              <div style="text-align:center">
              <%= image_tag @profile.avatar.url(:medium), style: "max-height: 180px; border-radius:50%;" %>
            </div>
              <div style="padding-top:20px;">
              <%= f.file_field :avatar %>
              <hr>
              <div class="field form-group">
                <%= f.label :about_me %>
              <%= f.text_field :description, placeholder: "Short Bio", class: 'form-control' %>
              </div>

                <%= f.submit "Save image", class: "btn btn-primary pull-right" %>
              <%end%>
                </div>
              </div>
            </div>
          </div>
        </div>

    <div class="col-sm-3 col-xs-12">
      <%= render '/components/about_panel' %>
    </div>
