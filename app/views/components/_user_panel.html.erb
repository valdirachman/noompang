<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-2"><%= image_tag @profile.avatar.url(:thumb), class: "avatar img-rounded" %></div>
      <div class="col-sm-10"><h4><%= user.username %></h4></div>
      <div class="col-sm-12" style="margin-top: 10px;">
        <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">RIDES<br>
          <h6><%= user.posts.count %></h6>
        </div>
        <%= link_to see_friends_path(@profile.user.username) do %>
          <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">FRIENDS<br>
            <h6><%= user.friends.count %></h6>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
