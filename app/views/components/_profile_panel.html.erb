
  <div class="panel-body">
    <div class="row ">
      <% if !profile.is_nil? && !profile.is_empty? %>
      <h4> About </h4>

        <p style="margin-top:10px"> My name is <a><b><%= profile.name %></b></a></p>
        <p style="margin-top:10px"> Work as <a><b><%= profile.occupation %></b></a>
        in <a><b> <%= profile.occupation_place %></b></a> </p>
        <p style="margin-top:10px"> Education<a><b> <%= profile.education %></b></a></p>
        <p style="margin-top:10px"> Hometown<a><b> <%= profile.address %></b></a></p>

      <% elsif user.id == current_user.id %>
        <p class="post-content"><%= link_to 'Update your profile', edit_profile_path(profile) %></p>
      <% else %>
        <p class="post-content"><%= user.username %> has no profile yet!</p>
      <% end %>
    </div>
  </div>
