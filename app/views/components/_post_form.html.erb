<%= form_for(@newPost) do |f| %>
  <div class="panel panel-default">
    <div class="panel-body row">
      <div class="col-xs-12">
        <div class="field form-group">
          <%= f.text_field :from, placeholder:"From", autofocus: true %>
        </div>
        <div class="field form-group">
          <%= f.text_field :destination, placeholder:"Destination" %>
        </div>
        <div class="field form-group">
          <%= f.date_select :date %>
        </div>
        <div class="field form-group">
          <%= f.time_select :time %>
        </div>
        <div class="actions">
          <%= f.submit "Create Ride" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
