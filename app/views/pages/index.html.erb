<% if !user_signed_in? %>
  <style>
    body {
      background: linear-gradient( /* darkened background */
        rgba(0,0,0, 0.2),
        rgba(0,0,0, 0.2)
        ), url("/bg1.jpg") no-repeat center center fixed
      ; /* only display once, center horizontal and vertical, dont let scroll change position */
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    }
    h1{
      color: white;
      font-weight: bold;
    }
    .container-index {
      margin-right: 15%;
      margin-left: 15%;
    }
    .text {
      color: white;
      font-weight: 300;
      font-size: 150%;
    }
    .footer-links {
      text-align: center;
      color: white;
      margin-top: 20%;
      font-size: 75%;
    }
    .log-in {
      float: right;
      width: 300px;
      height: 150px;
      margin-top: 7.5%;
    }
    .sign-up {
      float: right;
      width: 300px;
      height: 250px;
    }
  </style>
  
  <div class="container-index row">
    <div class="col-md-6 col-xs-12">
      <h1>Welcome to Noompang</h1> 
      <p class="text">
        Noompang with your buddies. Ride fun, cheaper.
      </p>
    </div>
    <div class="col-md-6 col-xs-12">
      <div class="log-in panel">
        <%= render '/devise/sessions/new'%>
      </div>
      <div class="sign-up panel">
        <%= render '/devise/registrations/new'%>
      </div> 
    </div>
    
    <div class="col-xs-12">
      <p class="footer-links">About   Help   Blog   Status   Jobs   Terms   Privacy   Cookies   Ads   @ 2016 Noompang</p>  
    </div>
    
  </div>
  
<% else %>

  <script>document.location = "/home"</script>

<% end %>