<div class="row">
  <div class="col-xs-3">

    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-2"><img src="/avatar.jpg" height="40px" width="40px" class="rounded-img"></div>
          <div class="col-sm-10"><h4><%= current_user.username %></h4></div>
          <div class="col-sm-12" style="margin-top: 10px;">
            <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">RIDES<br>
              <h6><%= current_user.posts.count %></h6>
            </div>
            <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">FRIENDS<br>
              <h6><%= current_user.friends.count %></h6>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <p>trends</p>
      </div>
    </div>
  </div>
  <div class="col-xs-6">
    <%= render '/components/post_form' %><br><br>

    <% for @p in @posts %>
      <div class="panel panel-default post-panel">
        <div class="panel-body row">
          <div class="col-sm-1">
            <img src="/avatar.jpg" height="40px" width="40px">
          </div>
          <div class="col-sm-11">
            <p class="post-title"><span class="post-owner"><%= @p.user.username %></span><span class="post-creation"> - <%= @p.created_at.to_formatted_s(:short) %></span></p>
            <% if @p.original != nil %>
              <p class="post-title">Original Ride by: <span class="post-owner"> <%= @p.original.user.username %></span></p>
            <% end %>
            <p class="post-content">From:  <%= @p.from %></p>
            <p class="post-content">To:  <%= @p.destination %></p>
            <p class="post-content">Date:  <%= @p.date %></p>
            <p class="post-content">Time:  <%= "#{@p.time.hour}:#{@p.time.min}"  %></p>
            <% if @p.user != current_user && @p.original == nil && !@p.reposts.find_by_user_id(current_user.id) %>
              <%= link_to 'repost', repost_post_path(@p), method: :post %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

  </div>
  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <p>about</p>
      </div>
    </div>
  </div>
</div>
