<div class="row">
  <h1>Friend Requests</h1>
  <br>
  <br>
</div>
  
<div class="row">
  <% if !@requests.empty? %>
    <% for @r in @requests %>
      <div class="panel panel-default post-panel">
        <div class="panel-body row">
          <div class="col-sm-1">
            <img src="/avatar.jpg" height="40px" width="40px">
          </div>
          <div class="col-sm-11">
            <p class="post-title"><span class="post-owner"><%= @r.username %></span><span> <%= link_to "Accept", accept_friend_path(@r.id) %></span></p>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>There's no friend request yet!</p>
  <% end %>
</div>