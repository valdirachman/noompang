<div class="bg-devise">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
        <img style="text-align:center; margin:50px 30% 0 30%;"src="/logo_white.png">
    <div class="panel panel-default" style="margin-top:20px; border-radius: 10px;">
      <div class="panel-body">
        <div  class="row" style="margin-bottom:25px;">
        <div class="col-xs-10 col-xs-offset-1">
        <div class="line-bottom" style="padding: 5px 0 10px;">
          <h3 style="font-weight:300; text-align:center; color:#4c6eab">Log in to your account</h3>
        </div>
      </div>
      <div class="col-xs-1">
      </div>
    </div>

<div class="form-margin">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="input-group input-group-lg" style="margin-bottom: 23px;">
    <span class="input-group-addon sign-user-logo" id="sizing-addon2" style="background-color:white"></span>
    <%= f.email_field :email, autofocus: true , class: "form-control plc-clr", aria_describedby: "sizing-addon2", placeholder: "Email address", style: "font-size: 15px;"%>
  </div>

  <div class="input-group input-group-lg" style="margin-bottom: 17px;">
    <span class="input-group-addon sign-password-logo" id="sizing-addon2" style="background-color:white"></span>
    <%= f.password_field :password, autocomplete: "off", class: "form-control plc-clr", aria_describedby: "sizing-addon2", placeholder: "Password", style: "font-size: 15px;"%>
  </div>


  <% if devise_mapping.rememberable? -%>
    <div class="field" style="margin-bottom: 10px;" >
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div>
    <%= f.submit "Log In", class: "btn-form" %>
  </div>
<% end %>

</div>
</div>
<div class="panel-footer" style="border-radius: 0 0 10px 10px;">
<%= render "devise/shared/links" %>
</div>

</div>
  <%= render '/components/directory' %>
</div>
</div>
