<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">

    <a href="../"><p style="text-align:center; margin-top:60px;"><img style="text-align:center;" src="/logo_white.png"></p></a>

    <div class="panel panel-default" style="margin-top:20px; border-radius: 10px;">
      <div class="panel-body">
        <div  class="row">
          <div class="col-xs-10 col-xs-offset-1">
            <div class="line-bottom" style="padding: 5px 0 10px;">
              <h3 style="font-weight:300; text-align:center; color:#4c6eab">Forget your password?</h3>
            </div>
          </div>
        </div>
      </div>

      <% flash.each do |key, value| %>
        <div style="border-radius:0;"class="alert alert-info alert-<%= key %>"><%= value %></div>
      <% end %>

      <div class="panel-body">
        <div class="form-margin">
        <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>


            <div class="input-group input-group-lg" style="margin-bottom: 23px;">
              <span class="input-group-addon sign-email-logo" id="sizing-addon2" style="background-color:white"></span>
              <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) , class: "form-control plc-clr", aria_describedby: "sizing-addon2", placeholder: "Email address", style: "font-size: 15px;"%>
            </div>

            <div>
              <%= f.submit "Resend confirmation instructions", class: "btn-form" %>
            </div>

        <% end %>

        </div>
      </div>

      <div class="panel-footer" style="border-radius: 0 0 10px 10px;">
      <%= render "devise/shared/links" %>
      </div>
      </div>
        <%= render '/components/directory' %>
      </div>
